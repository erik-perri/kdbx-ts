  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/pako": "^2.0.3",
    "@vitest/coverage-v8": "^1.6.0",
    "argon2": "^0.40.3",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "0.21.5",
    "eslint": "^8.57.0",
